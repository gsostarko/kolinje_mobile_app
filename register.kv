MDScreen:
    name: "RegisterScreen"
    id: registration_screen

    MDCard:
        size_hint: None, None
        size: 300,575
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        
        padding: 25
        spacing: 25
        border_radius: 7
        orientation: "vertical"
    
        MDLabel:
            id: welcome_label
            text: "Registracija"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        
        MDTextField:
            id:username
            hint_text: "korisničko ime"
            helper_text: "Unesite svoje korisničko ime."
            helper_text_mode: "on_focus"
            icon_right: "account"
            size_hint_x: None
            width: 250
            font_size: 18
            pos_hint: {"center_x": 0.5}
        
        MDTextField:
            id:email
            hint_text: "email"
            helper_text: "Unesite svoje korisničko ime."
            helper_text_mode: "on_focus"
            icon_right: "at"
            size_hint_x: None
            width: 250
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "lozinka"
            helper_text: "Unesite svoju lozinku."
            helper_text_mode: "on_focus"
            icon_right: "eye-off"
            size_hint_x: None
            width: 250
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDTextField:
            id: password_confirmation
            hint_text: "Potvrda lozinke"
            helper_text: "Ponovite lozinku."
            helper_text_mode: "on_focus"
            icon_right: "eye-off"
            size_hint_x: None
            width: 250
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
            
        MDFloatingActionButton:
            icon: "account-plus"
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5}
            padding_y: 15
            on_release: app.NewUserRegistration()
            
    MDIconButton:
        pos_hint: {'left': 1, 'top': 1}
        icon: "arrow-left"
        on_release: app.ChangeScreen(screen_name = "LoginScreen")
        
            