MDScreen:
    name: "LoginScreen"
    id: login_screen
    MDCard:
        size_hint: None, None
        size: 300,500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 1.5
        padding: 25
        spacing: 25
        border_radius: 7
        orientation: "vertical"
    
        MDLabel:
            id: welcome_label
            text: "Prijava"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            hint_text: "korisničko ime"
            helper_text: "Unesite svoje korisničko ime."
            helper_text_mode: "on_focus"
            icon_right: "account"
            size_hint_x: None
            width: 250
            font_size: 18
            pos_hint: {"center_x": 0.5}
        
        MDTextField:
            id:password
            hint_text: "lozinka"
            helper_text: "Unesite svoju lozinku."
            helper_text_mode: "on_focus"
            icon_right: "eye-off"
            size_hint_x: None
            width: 250
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
            
        MDFloatingActionButton:
            icon: "login-variant"
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5}
            padding_y: 15

        MDLabel:
            id: welcome_label
            text: "Nemate račun?"
            font_size: 15
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            underline: True

        MDFlatButton:
            text: "Registrirajte se"
            text_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5}
            font_size: '15sp'
            on_release: app.root.current = "RegisterScreen"